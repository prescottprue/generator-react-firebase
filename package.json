{
  "name": "generator-react-firebase",
  "version": "6.1.1",
  "description": "React and Firebase project generator (with option for Redux).",
  "main": "generators/index.js",
  "scripts": {
    "lint": "eslint generators test",
    "lint:fix": "npm run lint -- --fix",
    "test": "mocha -R spec ./test/unit/** && npm run test:clean",
    "test:cov": "nyc --reporter=lcov --reporter=html npm test",
    "test:clean": "rimraf test/tmp"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "command-exists": "^1.2.9",
    "glob": "^7.1.6",
    "lodash": "^4.17.15",
    "semver": "^7.3.2",
    "yeoman-generator": "^4.10.1",
    "yosay": "^2.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/polyfill": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/register": "^7.10.1",
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.10",
    "mocha": "^8.0.1",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "yeoman-assert": "^3.1.1",
    "yeoman-test": "^2.6.0"
  },
  "homepage": "https://github.com/prescottprue/generator-react-firebase",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prescottprue/generator-react-firebase.git"
  },
  "author": {
    "name": "Prescott Prue",
    "url": "https://github.com/prescottprue"
  },
  "keywords": [
    "react",
    "redux",
    "firebase",
    "react-firebase",
    "redux-firebase",
    "react-redux-firebase",
    "reactfire",
    "generator-react",
    "generator-redux",
    "yeoman-generator",
    "hooks",
    "react-scripts"
  ],
  "files": [
    "generators"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix"
    ]
  }
}
