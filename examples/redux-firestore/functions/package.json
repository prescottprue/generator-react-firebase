{
  "name": "redux-firestore-functions",
  "description": "Cloud Functions for redux-firestore",
  "version": "0.0.1",
  "engines": {
    "node": "8"
  },
  "scripts": {
    "test": "npm run build && mocha ./test/unit/**",
    "test:cov": "istanbul cover $(npm bin)/_mocha ./test/unit/**",
    "lint": "eslint -c .eslintrc.js ./src",
    "clean": "rimraf dist etc",
    "build": "npm run clean && babel src -d --out-dir dist --retainLines",
    "watch": "npm run build -- --watch",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "npm run build && firebase functions:log"
  },
  "dependencies": {
    "firebase-admin": "^6.1.0",
    "firebase-functions": "^2.1.0",
    "glob": "7.1.2",
    "lodash": "^4.17.11"
  },
  "private": true,
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "chai": "^4.2.0",
    "firebase-functions-test": "^0.1.3",
    "istanbul": "1.1.0-alpha.1",
    "mocha": "^5.2.0",
    "rimraf": "^2.6.2",
    "sinon": "^7.1.1"
  }
}
