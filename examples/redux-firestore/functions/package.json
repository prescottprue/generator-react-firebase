{
  "name": "redux-firestore-functions",
  "description": "Cloud Functions for redux-firestore",
  "version": "0.0.1",
  "main": "index.js",
  "private": true,
  "engines": {
    "node": "10"
  },
  "scripts": {
    "test": "mocha ./src/**/*.spec.js --opts ./mocha.opts",
    "test:watch": "npm test -- --watch",
    "test:cov": "nyc --reporter=lcov npm test",
    "lint": "eslint -c .eslintrc.js .",
    "lint:fix": "npm run lint -- --fix",    
    "clean": "rimraf dist etc",
    "build": "npm run clean && babel src -d --out-dir dist",
    "build:prod": "cross-env BABEL_ENV=production npm run build",
    "watch": "npm run build -- --watch",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "npm run build && firebase functions:log"
  },
  "dependencies": {
    "firebase-admin": "^8.4.0",
    "firebase-functions": "^3.2.0",
    "glob": "^7.1.3",
    "lodash": "^4.17.15"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/register": "^7.5.5",
    "babel-plugin-module-resolver": "^3.2.0",
    "chai": "^4.2.0",
    "cross-env": "^5.2.0",
    "eslint": "^6.2.2",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-chai-friendly": "^0.4.1",
    "eslint-plugin-flowtype": "^2.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "firebase-functions-test": "^0.1.6",
    "prettier": "^1.15.2",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1",
    "rimraf": "^3.0.0",
    "sinon": "^7.4.1"
  }
}
