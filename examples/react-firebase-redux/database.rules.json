{
  "rules": {
    ".read": "auth !== null",
    ".write": "auth !== null",
    "users": {
      "$uid": {
        ".write": "auth !== null && $uid === auth.uid"
      }
    },
    "projects": {
      ".indexOn": ["createdBy"],
      "$projectId": {
        ".read": "data.child('createdBy').val() === auth.uid",
        ".write": "data.child('createdBy').val() === auth.uid || (!data.exists() && newData.child('createdBy').val() === auth.uid)"
      }
    }
  }
}
