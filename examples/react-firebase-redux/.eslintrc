root: true

parser: babel-eslint

extends: [standard, standard-react]
plugins: [babel, react]

env:
  browser: true
  es6: true
  jasmine: true
  node: true

ecmaFeatures:
  jsx: true
  modules: true

globals:
  sinon: true

rules:
  semi: [2, 'never']
  no-console: 'error'
  jsx-quotes: ['error', 'prefer-single']
