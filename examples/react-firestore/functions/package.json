{
  "name": "react-firestore-functions",
  "description": "Cloud Functions for react-firestore",
  "version": "0.0.1",
  "main": "index.js",
  "private": true,
  "engines": {
    "node": "10"
  },
  "scripts": {
    "test": "mocha ./src/**/*.spec.js --opts ./mocha.opts",
    "test:watch": "npm test -- --watch",
    "test:cov": "nyc --reporter=lcov npm test",
    "lint": "eslint -c .eslintrc.js .",
    "lint:fix": "npm run lint -- --fix",    
    "clean": "rimraf dist etc",
    "build": "npm run clean && babel src -d --out-dir dist",
    "build:prod": "cross-env BABEL_ENV=production npm run build",
    "watch": "npm run build -- --watch",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "npm run build && firebase functions:log"
  },
  "dependencies": {
    "firebase-admin": "^8.8.0",
    "firebase-functions": "^3.3.0",
    "glob": "^7.1.6",
    "lodash": "^4.17.15"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.4",
    "@babel/core": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@babel/register": "^7.7.4",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-module-resolver": "^3.2.0",
    "chai": "^4.2.0",
    "cross-env": "^6.0.3",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.5.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-chai-friendly": "^0.5.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsdoc": "^18.4.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "eslint-plugin-standard": "^4.0.1",
    "firebase-functions-test": "^0.1.7",
    "prettier": "^1.19.1",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "rimraf": "^3.0.0",
    "sinon": "^7.5.0"
  }
}
