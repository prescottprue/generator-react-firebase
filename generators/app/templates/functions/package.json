{
  "name": "<%= appName %>-functions",
  "description": "Cloud Functions for <%= appName %>",
  "version": "<%= version %>",
  "main": "index.js",
  "private": true,
  "engines": {
    "node": "8"
  },
  "scripts": {
    <% if(includeFunctionsTests) { %>"test": "mocha ./src/**/*.spec.js --opts ./mocha.opts",
    "test:watch": "npm test -- --watch",
    "test:cov": "nyc --reporter=lcov npm test",
    <% } %>"lint": "eslint -c .eslintrc.js .",
    "lint:fix": "npm run lint -- --fix",    
    "clean": "rimraf dist etc",
    "build": "npm run clean && babel src -d --out-dir dist",
    "build:prod": "cross-env BABEL_ENV=production npm run build",
    "watch": "npm run build -- --watch",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "npm run build && firebase functions:log"
  },
  "dependencies": {
    "firebase-admin": "^7.0.0",
    "firebase-functions": "^2.2.0",
    "glob": "^7.1.3",
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",<% if(includeFunctionsTests) { %>
    "@babel/register": "^7.0.0",<% } %>
    "babel-plugin-module-resolver": "^3.1.1",<% if(includeFunctionsTests) { %>
    "chai": "^4.2.0",<% } %>
    "cross-env": "^5.2.0",
    "eslint": "^5.15.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-flowtype": "^2.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",<% if(includeFunctionsTests) { %>
    "firebase-functions-test": "^0.1.3",<% } %>
    "prettier": "^1.15.2",<% if(includeFunctionsTests) { %>
    "mocha": "^6.0.2",
    "nyc": "^13.3.0",<% } %>
    "rimraf": "^2.6.2"<% if(includeFunctionsTests) { %>,
    "sinon": "^7.2.7"<% } %>
  }
}
