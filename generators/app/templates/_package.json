{
  "name": "<%= appName %>",
  "version": "<%= version %>",
  "description": "Project generated by generator-react-firebase",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "start": "react-scripts start",
    "start:dist": "npm run build && firebase emulators:start --only hosting",
    "start:emulate": "cross-env REACT_APP_FIREBASE_DATABASE_EMULATOR_HOST=\"localhost:$(cat firebase.json | jq .emulators.database.port)\"<% if (includeFirestore) { %> REACT_APP_FIRESTORE_EMULATOR_HOST=\"localhost:$(cat firebase.json | jq .emulators.firestore.port)\"<% } %> yarn start",<% if (includeComponentTests) { %>
    "test": "react-scripts test",<% } %><% if (deployTo !== 'firebase') { %>
    "create-config": "node build/create-config",<% } else { %>
    "build:config": "firebase-ci createConfig",<% } %><% if (includeUiTests) { %>
    "build:testConfig": "cypress-firebase createTestEnvFile",<% } %><% if (deployTo === 'firebase') { %>
    "deploy": "firebase-ci deploy -s",<% } %><% if (includeFunctions) { %>
    "functions:start": "npm run start --prefix functions",
    "functions:serve": "npm run serve --prefix functions",
    "functions:watch": "npm run watch --prefix functions",
    "functions:build": "npm run build --prefix functions",<% } %><% if (includeFunctionsTests) { %>
    "functions:test": "npm run test --prefix functions",<% } %><% if (includeUiTests) { %>
    "test:ui": "npm run build:testConfig && cypress run",
    "test:ui:open": "npm run build:testConfig && cypress open",
    "test:ui:emulate": "cross-env FIREBASE_DATABASE_EMULATOR_HOST=\"localhost:$(cat firebase.json | jq .emulators.database.port)\"<% if (includeFirestore) { %>  FIRESTORE_EMULATOR_HOST=\"localhost:$(cat firebase.json | jq .emulators.firestore.port)\"<% } %> yarn test:open",<% } %>
    "emulators": "firebase emulators:start --only firestore,database",
    "emulators:all": "firebase emulators:start --only firestore,database,hosting",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --single-quote --no-semi --trailing-comma none --write \"src/**/*.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/<%= githubUser %>/<%= appName %>.git"
  },
  "engines": {
    "node": ">=10.15.0"
  },
  "author": "<%= githubUser %> (https://github.com/<%= githubUser %>)",
  "license": "MIT",
  "dependencies": {
    "@material-ui/core": "^4.9.7",
    "@material-ui/icons": "^4.9.1",<% if (includeSentry) { %>
    "@sentry/browser": "^5.15.0",<% } %>
    "firebase": "^7.12.0",
    "formik": "^2.0.6",
    "formik-material-ui": "^1.0.0",
    "history": "^4.10.1",
    "lodash": "^4.17.15",
    "prop-types": "^15.7.2",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-google-button": "^0.6.0",<% if (includeRedux) { %>
    "react-redux": "^7.1.1",
    "react-redux-firebase": "^3.1.2",<% } %>
    "react-router-dom": "^5.1.2",<% if (!includeRedux) { %>
    "reactfire": "^2.0.2",<% } %>
    "recompose": "^0.30.0"<% if (includeRedux) { %>,
    "redux": "^4.0.4",
    "redux-auth-wrapper": "^2.1.0",<% } %><% if (includeRedux && includeFirestore) { %>
    "redux-firestore": "^0.11.0",<% } %><% if (includeRedux) { %>
    "redux-thunk": "^2.3.0"<% } %>
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",<% if (includeUiTests) { %>
    "cypress": "^4.2.0",
    "cypress-firebase": "^0.11.0",<% } %>
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",<% if (includeUiTests) { %>
    "eslint-plugin-chai-friendly": "^0.5.0",
    "eslint-plugin-cypress": "^2.7.0",<% } %>
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsdoc": "^18.4.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "eslint-plugin-standard": "^4.0.1",<% if (includeUiTests) { %>
    "firebase-admin": "^8.10.0",<% } %><% if (deployTo === 'firebase') { %>
    "firebase-ci": "^0.12.2",
    "firebase-tools": "^7.15.1",<% } %>
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "prettier": "^2.0.0",
    "react-scripts": "3.4.0"<% if (includeComponentTests) { %>,
    "react-test-renderer": "^16.12.0"<%} %>
  },
  "eslintConfig": {
    "extends": "./eslintrc.js"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix"
    ]
  }
}
