{
  "name": "<%= appName %>",
  "version": "<%= version %>",
  "description": "Project generated by generator-react-firebase",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "start": "react-scripts start",
    "start:dist": "npm run build && firebase emulators:start --only hosting",
    "start:emulate": "cross-env REACT_APP_FIREBASE_DATABASE_EMULATOR_HOST=\"localhost:$(cat firebase.json | jq .emulators.database.port)\"<% if (includeFirestore) { %> REACT_APP_FIRESTORE_EMULATOR_HOST=\"localhost:$(cat firebase.json | jq .emulators.firestore.port)\"<% } %> npm run start",<% if (includeComponentTests) { %>
    "test": "react-scripts test",<% } %><% if (includeFunctions) { %>
    "functions:start": "npm run start --prefix functions",
    "functions:serve": "npm run serve --prefix functions",
    "functions:watch": "npm run watch --prefix functions",
    "functions:build": "npm run build --prefix functions",<% } %><% if (includeFunctionsTests) { %>
    "functions:test": "npm run test --prefix functions",<% } %><% if (includeUiTests) { %>
    "test:ui:run": "env-cmd -f .env.local cypress run",
    "test:ui": "env-cmd -f .env.local cypress open",
    "test:ui:emulate": "cross-env FIREBASE_DATABASE_EMULATOR_HOST=\"localhost:$(cat firebase.json | jq .emulators.database.port)\"<% if (includeFirestore) { %>  FIRESTORE_EMULATOR_HOST=\"localhost:$(cat firebase.json | jq .emulators.firestore.port)\"<% } %> npm run test:ui",<% } %>
    "emulators:db": "firebase emulators:start --only firestore,database",
    "emulators:hosting": "firebase emulators:start --only firestore,database,hosting",
    "emulators:all": "firebase emulators:start",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --single-quote --no-semi --trailing-comma none --write \"src/**/*.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/<%= githubUser %>/<%= appName %>.git"
  },
  "engines": {
    "node": ">=10.15.0"
  },
  "author": "<%= githubUser %> (https://github.com/<%= githubUser %>)",
  "license": "MIT",
  "dependencies": {
    "@material-ui/core": "^4.9.13",
    "@material-ui/icons": "^4.9.1",<% if (includeSentry) { %>
    "@sentry/browser": "^5.15.5",<% } %>
    "firebase": "^7.14.3",
    "history": "^4.10.1",
    "lodash": "^4.17.15",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-google-button": "^0.7.0",<% if (includeRedux) { %>
    "react-redux": "^7.1.1",
    "react-redux-firebase": "^3.1.2",<% } %>
    "react-hook-form": "^5.7.2",
    "react-router-dom": "^5.1.2",<% if (!includeRedux) { %>
    "reactfire": "^2.0.3"<% } %><% if (includeRedux) { %>
    "recompose": "^0.30.0",
    "redux": "^4.0.4",
    "redux-auth-wrapper": "^2.1.0",<% } %><% if (includeRedux && includeFirestore) { %>
    "redux-firestore": "^0.11.0",<% } %><% if (includeRedux) { %>
    "redux-thunk": "^2.3.0"<% } %>
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "cross-env": "^7.0.2",<% if (includeUiTests) { %>
    "cypress": "^4.6.0",
    "cypress-firebase": "^1.1.0",<% } %>
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-config-standard-react": "^9.2.0",<% if (includeUiTests) { %>
    "eslint-plugin-chai-friendly": "^0.6.0",
    "eslint-plugin-cypress": "^2.10.3",<% } %>
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsdoc": "^25.2.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "eslint-plugin-standard": "^4.0.1",<% if (includeUiTests) { %>
    "firebase-admin": "^8.12.0",<% } %>
    "firebase-ci": "^0.13.0",
    "firebase-tools": "^8.2.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5",
    "react-scripts": "^3.4.1"<% if (includeComponentTests) { %>,
    "react-test-renderer": "^16.13.1"<%} %>
  },
  "eslintConfig": {
    "extends": "./eslintrc.js"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "config": {
    "port": 3000
  }
}
