{
  "name": "<%= appName %>",
  "version": "<%= version %>",
  "description": "Project generated by generator-react-firebase",
  "main": "index.js",
  "scripts": {
    "build": "craco build",
    "eject": "craco eject",
    "setup": "echo \"Generating client config...\" && env-cmd bin/generate-firebase-sdk-config.js --file ./config/default.json",
    "check-config": "if [ ! -f ./src/client-config.json ]; then <% if(useYarn) { %>yarn<% } else { %>npm run<% } %> setup; else echo \"Client config already exists, running command...\"; fi;",
    "start": "<% if(useYarn) { %>yarn<% } else { %>npm run<% } %> check-config && env-cmd craco start",
    "start:dist": "<% if(useYarn) { %>yarn<% } else { %>npm run<% } %> build && firebase emulators:start --only hosting",
    "start:emulate": "cross-env NODE_APP_INSTANCE=emulators <% if(useYarn) { %>yarn<% } else { %>npm run<% } %> start",<% if (includeComponentTests) { %>
    "test": "craco test",<% } %><% if (includeFunctions) { %>
    "functions:start": "<% if(useYarn) { %>yarn --cwd functions start<% } else { %>npm run start --prefix functions<% } %>",
    "functions:watch": "<% if(useYarn) { %>yarn --cwd functions watch<% } else { %>npm run watch --prefix functions<% } %>",
    "functions:build": "<% if(useYarn) { %>yarn --cwd functions build<% } else { %>npm run build --prefix functions<% } %>",<% } %><% if (includeFunctionsTests) { %>
    "functions:test": "firebase emulators:exec --only auth,firestore,database,pubsub \"<% if(useYarn) { %>yarn --cwd<% } else { %>npm run --prefix<% } %> functions test:base\"",
    "functions:test:cov": "firebase emulators:exec --only auth,firestore,database,pubsub \"<% if(useYarn) { %>yarn --cwd<% } else { %>npm run --prefix<% } %> functions test:cov:base\"",<% } %><% if (includeUiTests) { %>
    "test:ui:run": "env-cmd cypress run",
    "test:ui": "env-cmd cypress open",
    "test:ui:emulate": "cross-env NODE_APP_INSTANCE=emulators npm run test:ui",<% } %>
    "emulators": "firebase emulators:start --only auth,firestore,database,pubsub",
    "emulators:hosting": "firebase emulators:start --only auth,firestore,database,hosting",
    "emulators:all": "firebase emulators:start",
    "lint": "eslint .",
    "lint:fix": "<% if(useYarn) { %>yarn<% } else { %>npm run<% } %> lint <% if(!useYarn) { %>-- <% } %>--fix",
    "format": "prettier --single-quote --no-semi --trailing-comma none --write \"src/**/*.js\"",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/<%= githubUser %>/<%= appName %>.git"
  },
  "engines": {
    "node": ">14.15.0"
  },
  "author": "<%= githubUser %> (https://github.com/<%= githubUser %>)",
  "license": "MIT",
  "dependencies": {
    "@material-ui/core": "^4.12.2",
    "@material-ui/icons": "^4.11.2",<% if (includeSentry) { %>
    "@sentry/browser": "^6.4.0",<% } %>
    "firebase": "^8.7.1",
    "notistack": "^1.0.9",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-google-button": "^0.7.2",<% if (includeRedux) { %>
    "react-redux": "^7.1.1",
    "react-redux-firebase": "^3.8.1",<% } %>
    "react-hook-form": "^7.11.1",
    "react-router-dom": "^5.2.0",<% if (!includeRedux) { %>
    "reactfire": "^3.0.0-rc.0"<% } %><% if (includeRedux) { %>
    "redux": "^4.0.4",
    "redux-auth-wrapper": "^2.1.0",<% } %><% if (includeRedux && includeFirestore) { %>
    "redux-firestore": "^0.11.0",<% } %><% if (includeRedux) { %>
    "redux-thunk": "^2.3.0"<% } %><% if (includeErrorHandling) { %>,
    "stackdriver-errors-js": "^0.8.0"<% } %>
  },
  "devDependencies": {
    "@craco/craco": "6.2.0",
    "@sentry/cli": "^1.67.1",<% if (includeUiTests) { %>
    "@testing-library/cypress": "^8.0.0",<% } %><% if(includeFunctions && typescriptCloudFunctions) { %>
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",<% } %>
    "babel-eslint": "^10.1.0",
    "config": "^3.3.6",
    "cross-env": "^7.0.3",<% if (includeUiTests) { %>
    "cypress": "^8.0.0",
    "cypress-firebase": "^2.0.0",<% } %>
    "env-cmd": "^10.1.0",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-config-standard-react": "^11.0.1",<% if (includeUiTests) { %>
    "eslint-plugin-chai-friendly": "^0.7.1",
    "eslint-plugin-cypress": "^2.11.3",<% } %>
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsdoc": "^35.5.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-standard": "^5.0.0",<% if (includeUiTests) { %>
    "firebase-admin": "^9.11.0",<% } %>
    "firebase-ci": "^0.15.0",
    "firebase-tools": "^9.16.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.0.0",
    "minimist": "1.2.5",
    "prettier": "^2.3.2",
    "react-scripts": "^4.0.3"<% if (includeComponentTests) { %>,
    "react-test-renderer": "^17.0.2"<%} %><% if(includeFunctions && typescriptCloudFunctions) { %>,
    "typescript": "^4.2.4"<% } %>
  },
  "eslintConfig": {
    "extends": "./eslintrc.js"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts}": [
      "eslint --fix"
    ]
  },
  "config": {
    "port": 3000
  }
}
