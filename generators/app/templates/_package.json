{
  "name": "<%= appName %>",
  "version": "<%= version %>",
  "description": "Project generated by generator-react-firebase",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "deploy": "firebase-ci deploy -s",
    "createConfig": "firebase-ci createConfig",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "eject": "react-scripts eject",<% if (includeTests) { %>
    "test": "react-scripts test",<% } %>
    "lint": "eslint src functions scripts config<% if (includeTests) { %> tests<% } %>",
    "lint:fix": "npm run lint -- --fix",<% if (includeFunctions) { %>
    "functions:start": "npm run start --prefix functions",
    "functions:serve": "npm run serve --prefix functions",
    "functions:watch": "npm run watch --prefix functions",
    "functions:build": "npm run build --prefix functions",
    "functions:test": "npm run test --prefix functions",<% } %>
    "format": "prettier --single-quote --no-semi --trailing-comma none --write \"src/**/*.js\"",<% if (deployTo !== 'firebase') { %>
    "create-config": "node build/create-config",<% } %><% if (includeTests) { %>
    "codecov": "cat coverage/*/lcov.info | codecov",<% } %>
    "prepush": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/<%= githubUser %>/<%= appName %>.git"
  },
  "engines": {
    "node": ">=8"
  },
  "author": "<%= githubUser %> (https://github.com/<%= githubUser %>)",
  "license": "MIT",
  "dependencies": {
    "@material-ui/core": "^3.5.1",
    "@material-ui/icons": "^3.0.1",
    "firebase": "^5.5.8",
    "history": "^4.7.2",
    "lodash": "^4.17.11",
    "prop-types": "^15.6.1",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",<% if (includeAnalytics) { %>
    "react-ga": "^2.3.5",<%} %>
    "react-scripts": "2.1.1",
    "react-google-button": "^0.5.3",
    "react-loadable": "^5.5.0",
    <% if (includeRedux) { %>"react-redux": "^5.0.7",
    "react-redux-firebase": "^2.1.9",<% } %>
    "react-router-dom": "^4.3.1",
    "recompose": "^0.30.0",<% if (includeRedux) { %>
    "redux": "^4.0.0",
    "redux-auth-wrapper": "^2.0.3",<% } %><% if (includeRedux && includeFirestore) { %>
    "redux-firestore": "^0.5.8",<% } %><% if (includeRedux) { %>
    "redux-form": "^7.4.0",
    "redux-form-material-ui": "next",
    "redux-thunk": "^2.2.0"<% } %>
  },
  "devDependencies": {<% if (includeTests) { %>
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "chai-enzyme": "^1.0.0-beta.0",<% } %>
    "eslint": "5.6.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-config-react-app": "^3.0.4",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsx-a11y": "6.1.2",
    "eslint-plugin-prettier": "^2.1.2",
    "eslint-plugin-react": "7.11.1",
    "husky": "^0.14.3",<% if (includeTests) { %>
    "jest": "^24.0.0-alpha.6",
    "jest-pnp-resolver": "1.0.1",
    "jest-resolve": "23.6.0",<% } %>
    "node-sass": "^4.10.0",
    "prettier": "^1.14.3"<% if (includeTests) { %>,
    "react-test-renderer": "^16.6.3",
    "sinon": "^5.1.1",
    "sinon-chai": "^3.1.0"<%} %>
  },
  "eslintConfig": {
    "extends": "./eslintrc.json"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],<% if (includeTests) { %>
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "resolver": "jest-pnp-resolver",
    "setupFiles": [
      "react-app-polyfill/jsdom"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx}"
    ],
    "testEnvironment": "jsdom",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web",
      "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ],
    "snapshotResolver": "<rootDir>/scripts/snapshotResolver.js"
  },<%} %>
  "babel": {
    "presets": [
      "react-app"
    ],
    "plugins": [
      "@babel/plugin-syntax-dynamic-import"
    ]
  }
}
