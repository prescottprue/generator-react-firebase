{
  "database": {
    "rules": "database.rules.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    <% if (includeFirestore) { %>"firestore": {
      "port": 8080
    },
    <% } %>"database": {
      "port": 9000
    },
    "hosting": {
      "port": 3000
    }
  }<% if (includeFirestore) { %>,
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }<% } %>,
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "jsconfig.json",
      "cypress/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }<% if (includeFunctions) { %>,
  "functions": {
    "predeploy": [
      "if [ \"${CI}\" = \"true\" ]; then echo Skipping functions build since environment is CI; else npm --prefix \"$RESOURCE_DIR\" run build; fi"
    ],
    "ignore": [
      "**/.*",
      "**/*.spec.js",
      "**/node_modules/**",
      "mocha.opts",
      "coverage/**",
      "src",
      "scripts/**",
      "jsconfig.json"
    ]
  }<% } %>
}
