{
  "database": {
    "rules": "database.rules.json"
  },
  "storage": {
    "rules": "storage.rules"
  }<% if (includeFirestore) { %>,
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }<% } %><% if (deployTo === 'firebase') { %>,
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "jsconfig.json",
      "cypress/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }<% } %><% if (includeFunctions) { %>,
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build:prod"
    ],
    "ignore": [
      "**/.*",
      "**/*.spec.js",
      "src",
      "scripts/**",
      "jsconfig.json"
    ]
  }<% } %>
}
